---
const links = [
    {href: "/", text: "Listado"},
    {href: "/Pokemons/1", text: "Paginado"},
    {href: "/favorites", text: "Favoritos"},
]
const currentPath = Astro.url.pathname


---
<!-- component -->
<nav class="shadow bg-gradient-to-r from-slate-900/50 via-red-500/50 to-slate-400/40 text-lg font-medium">
    <div class="container flex items-center justify-center p-6 mx-auto capitalize text-gray-300">

        <!-- {links.map(({href,text}) => (
            <a href={href} class:list={
                [
                    "text-gray-200 mx-1.5 sm:mx-6",
                {
                    'border-b-2 border-blue-500': currentPath === href
                }
                ]
            }>{text}</a>
        ))}  -->

        {links.map(({href,text}) => (
            <div>
                <a href={href} class="text-gray-200 mx-1.5 sm:mx-6"
                >{text}</a>
                {currentPath===href ? 
                (<div
                transition:name="active-menu"
                class="border-b-2 border-blue-500 mx-4"></div>):
                (<div      
                class="border-b-2 border-transparent"></div>)}
            </div>
            
        ))} 
       
    </div>
</nav>